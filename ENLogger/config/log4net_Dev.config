<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<appender name="Console" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="[%d %-5p, %c{1}] %m%n" />
		</layout>
	</appender>

	<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
		<file value="..\\temp\\log_enlogger.txt" />
		<appendToFile value="true" />
		<maximumFileSize value="5000KB"/>
    <maxSizeRollBackups value="50" />
		<filter type="log4net.Filter.LevelRangeFilter">
			<param name="LevelMin" value="DEBUG" />
			<param name="LevelMax" value="FATAL" />
		</filter>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="[%d %-5p, %c{1}] %m%n" />
		</layout>
	</appender>

	<appender name="SMTPAppender" type="log4net.Appender.SMTPAppender">
		<param name="To" value=" mark.mao@enbridge.com" />
		<param name="From" value="MIAlert-donotreply@enbridge.com" />
		<param name="Subject" value="Dev - MBI Alert Critical Message" />
		<param name="SMTPHost" value="exsmtp.uspl.enbridge.com" />
		<param name="LocationInfo" value="false" />
		<param name="BufferSize" value="1" />
		<param name="Lossy" value="true" />
		<evaluator type="log4net.Core.LevelEvaluator">
			<param name="Threshold" value="ERROR"/>
		</evaluator>
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="%n%d [%t] %-5p %c [%x] - %m%n%n%n" />
		</layout>
	</appender>

	<root>
    <level value="DEBUG" />
		<appender-ref ref="Console" />
		<appender-ref ref="RollingFile" />
		<appender-ref ref="SMTPAppender" />
	</root>
</log4net>
